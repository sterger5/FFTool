<Window x:Class="FFTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FFTool - 格式转换工具"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        Background="#f3f3f3"
        FontFamily="Segoe UI"
        FontSize="14"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop">

	<Window.Resources>
		<!-- Button 样式 -->
		<Style TargetType="Button">
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="8,4"/>
			<Setter Property="Background" Value="#0078D7"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
				</Setter.Value>
			</Setter>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border CornerRadius="6" Background="{TemplateBinding Background}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- TextBox 样式 -->
		<Style TargetType="TextBox">
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="6,2"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#ccc"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="SnapsToDevicePixels" Value="True"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
							<ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- ComboBox 样式（不修改模板） -->
		<Style TargetType="ComboBox">
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="6,2"/>
			<Setter Property="BorderBrush" Value="#ccc"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Background" Value="White"/>
		</Style>
	</Window.Resources>

	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<!-- 左侧菜单栏宽度 -->
			<ColumnDefinition Width="*"/>
			<!-- 右侧内容区 -->
		</Grid.ColumnDefinitions>

		<!-- 左侧媒体类型选择菜单 -->
		<ListBox x:Name="MediaTypeListBox"
                 Grid.Column="0"
                 SelectionChanged="MediaTypeListBox_SelectionChanged"
                 Background="#F0F0F0"
                 BorderThickness="0"
                 Margin="10"
                 HorizontalContentAlignment="Stretch">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border CornerRadius="5" Margin="5" Padding="15" Background="{Binding IsSelected, Converter={StaticResource SelectionToBrushConverter}}">
						<TextBlock Text="{Binding Name}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<!-- 右侧操作区域 -->
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- 文件选择 -->
			<StackPanel Orientation="Horizontal" Grid.Row="0">
				<TextBox x:Name="FilePathBox" Width="330" IsReadOnly="True"/>
				<Button Content="选择文件" Width="100" Click="Browse_Click"/>
			</StackPanel>

			<!-- 输出目录选择 -->
			<StackPanel Orientation="Horizontal" Grid.Row="1">
				<TextBox x:Name="OutputPathBox" Width="330" IsReadOnly="True"/>
				<Button Content="输出目录" Width="100" Click="BrowseOutputFolder_Click"/>
			</StackPanel>

			<!-- 格式选择 -->
			<StackPanel Orientation="Horizontal" Grid.Row="2">
				<TextBlock Text="目标格式：" VerticalAlignment="Center" Margin="0,0,5,0"/>
				<ComboBox x:Name="FormatBox" Width="100">
					<ComboBoxItem Content="mp3"/>
					<ComboBoxItem Content="mp4"/>
					<ComboBoxItem Content="avi"/>
				</ComboBox>
			</StackPanel>

			<!-- 控制按钮 -->
			<StackPanel Orientation="Horizontal" Grid.Row="3">
				<Button Content="开始转换" Width="120" Click="Convert_Click"/>
				<Button Content="中止" Width="120" Click="Cancel_Click"/>
			</StackPanel>

			<!-- 状态文本 -->
			<TextBlock x:Name="StatusText" Grid.Row="4" Foreground="DarkGreen" Margin="5"/>

			<!-- 进度条 -->
			<ProgressBar x:Name="ProgressBar" Grid.Row="5" Height="20" Minimum="0" Maximum="100" Margin="5"/>
		</Grid>
	</Grid>
</Window>
